<div
	class="tab-pane fade show active"
	id="show-feature"
	role="tabpanel"
	aria-labelledby="nav-home-tab"
>
	<div class="card shadow mb-4 mt-4">
		<div class="card-body">
			<div class="row">
				<div class="col-md-5">
					<form
						action="/admin/item/add/feature"
						method="POST"
						enctype="multipart/form-data"
					>
						<div class="form-group">
							<label for="name">Name</label>
							<input
								type="text"
								class="form-control"
								id="featureName"
								name="featureName"
								placeholder="Type Your Feature Here.."
								required
							/>
						</div>
						<div class="form-group">
							<label for="name">Quantity</label>
							<input
								type="number"
								class="form-control"
								id="quantity"
								name="quantity"
								placeholder="Type Quantity Here.."
								required
							/>
						</div>
						<div class="form-group">
							<label for="name">Image URL</label>
							<input
								type="file"
								class="form-control"
								id="imageUrl"
								name="imageUrl"
								placeholder="Image"
								required
							/>
						</div>
						<input
							type="hidden"
							value="<%= itemId %>"
							name="itemId"
						/>
						<button type="submit" class="btn btn-primary">
							Save
						</button>
					</form>
				</div>
				<div class="col-md-7">
					<div class="table-responsive">
						<table
							class="table table-bordered"
							id="dataTable"
							width="100%"
							cellspacing="0"
						>
							<thead>
								<tr>
									<th>No</th>
									<th>Name</th>
									<th>Quantity</th>
									<th>Image Url</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
								<% for(let i = 0; i < feature.length; i++) { %>
								<tr>
									<td><%= i + 1 %></td>
									<td><%= feature[i].name %></td>
									<td><%= feature[i].qty %></td>
									<td>
										<img
											src="https://tirwanda-staycation.herokuapp.com/<%= feature[i].imageUrl %>"
											alt="Feature 1"
											width="70px"
										/>
									</td>
									<td>
										<form
											action="/admin/item/<%= itemId %>/feature/<%= feature[i]._id %>?_method=DELETE"
											method="POST"
										>
											<a
												href="javascript:void();"
												type="button"
												class="btn btn-warning btn-circle btn-sm button-update"
												data-id="<%= feature[i]._id %>"
												data-name="<%= feature[i].name %>"
												data-qty="<%= feature[i].qty %>"
												><i class="fas fa-edit"></i
											></a>
											<button
												type="submit"
												class="btn btn-danger btn-sm"
											>
												<i class="fas fa-trash"></i>
											</button>
										</form>
									</td>
								</tr>
								<% } %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
